<div class="row justify-content-center">

  <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
              <!-- Nested Row within Card Body -->
              <div class="row">
                  <div class="col-lg-4 d-none d-lg-block bg-login-image"></div>
                  <div class="col-lg-8">
                      <div class="p-5">
                          <div class="text-center">
                              <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
                          </div>
                          <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                              <div class="form-group">
                                <%= f.email_field :email, autofocus: true, class: "form-control form-control-user", placeholder:"Email" %>
                              </div>

                              <div class="form-group">
                                <%= f.password_field :password, class: "form-control form-control-user", placeholder:"Senha" %>
                              </div>


                              <% if devise_mapping.rememberable? %>
                                <div class="form-group">
                                  <div class="custom-control custom-checkbox small">
                                    <%= f.check_box :remember_me %> Lembrar-me
                                  </div>
                                </div>
                              <% end %>

                              <div class="actions">
                                <%= f.submit "Entrar", class: "btn btn-primary btn-user btn-block" %>
                              </div>
                          <% end %>
                          <hr>
                      </div>
                  </div>
              </div>
          </div>
      </div>

  </div>

</div>
