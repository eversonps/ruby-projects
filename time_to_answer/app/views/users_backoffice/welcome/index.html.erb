<h1>Seja bem vindo!</h1>

<div class="row" style="display: inline-block;">
  <div class="tile_count">
    <div class="col-md-4 col-sm-4  tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i>Total</span>
      <div class="count"><%= @user_statistic.total_questions %></div>
      <span class="count_bottom"><i class="green">4% </i> From last Week</span>
    </div>
    <div class="col-md-4 col-sm-4  tile_stats_count">
      <span class="count_top"><i class="fa fa-check-square-o"></i> Certas</span>
      <div class="count"><%= @user_statistic.right_questions %></div>
      <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>3% </i> From last Week</span>
    </div>
    <div class="col-md-4 col-sm-4  tile_stats_count">
      <span class="count_top"><i class="fa fa-close"></i> Erradas</span>
      <div class="count green"><%= @user_statistic.wrong_questions %></div>
      <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
    </div>
  </div>
</div>